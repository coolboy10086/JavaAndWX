page{background-color: #eee;}
view{box-sizing: border-box;}
.cart{
  position: relative;
  margin-bottom: 20rpx;
  width:100%;
  min-height:600rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.cart .image{
  width:100%;
  height:330rpx;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
}
.cart .pname{
  height:100rpx;
  padding: 10px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.cart .price{
  color:#f00;
  font-size:18px;
  padding:20rpx;
}
.cart .price::before{
  content:'ï¿¥';
  font-size:12px;
}
.cart .tips{
  padding:10rpx 20rpx;
  color:#ccc;
  font-size:14px;
}
.cart .addCart{
  position: absolute;
  bottom:80rpx;
  right:50rpx;
  color:#fff;
  border-radius: 50%;
  background-color: #f00;
  width: 50rpx;
  height:50rpx;
  display:flex;
  align-items: center;
  justify-content: center;
  padding:0rpx;
}